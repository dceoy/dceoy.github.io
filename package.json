{
  "name": "dceoy.github.io",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "lint:html": "htmlhint \"**/*.html\" && prettier --check \"**/*.html\"",
    "lint:css": "stylelint \"**/*.css\" && prettier --check \"**/*.css\"",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern . && prettier --check --no-error-on-unmatched-pattern \"**/*.{js,jsx,ts,tsx}\"",
    "format:html": "prettier --write \"**/*.html\"",
    "format:css": "prettier --write \"**/*.css\" && stylelint --fix \"**/*.css\"",
    "format:js": "eslint --fix --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern . && prettier --write --no-error-on-unmatched-pattern \"**/*.{js,jsx,ts,tsx}\"",
    "format": "pnpm run format:html && pnpm run format:css && pnpm run format:js",
    "lint": "pnpm run lint:html && pnpm run lint:css && pnpm run lint:js"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-toml": "^0.13.1",
    "htmlhint": "^1.8.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.0",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^39.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "semi": true
  }
}
