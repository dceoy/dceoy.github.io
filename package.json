{
  "name": "dceoy.github.io",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "lint": "htmlhint \"**/*.html\" && stylelint \"**/*.css\" && eslint --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern .",
    "lint:fix": "stylelint --fix \"**/*.css\" && eslint --fix --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern .",
    "format": "prettier --write \"**/*.{html,css,js,jsx,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,jsx,ts,tsx}\""
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-toml": "^1.0.3",
    "htmlhint": "^1.8.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.0",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^39.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "semi": true
  }
}
